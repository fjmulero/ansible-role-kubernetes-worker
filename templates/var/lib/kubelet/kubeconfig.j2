apiVersion: v1
kind: Config
clusters:
- cluster:
    certificate-authority: {{k8s_conf_dir}}/ca.pem
    server: https://{{hostvars[inventory_hostname]['ansible_' + k8s_interface].ipv4.address}}:6443
  name: kubernetes
contexts:
- context:
    cluster: kubernetes
    user: kubelet
  name: kubelet
current-context: kubelet
users:
- name: kubelet
  user:
    token: {{k8s_kubelet_token}}
